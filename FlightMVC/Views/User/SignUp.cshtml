@model OnlineFlightBooking.Models.SignUpModel
@{
    ViewBag.Title = "SignUp";
}
<h2>SignUp</h2>
<h2>@ViewBag.message</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <table>
        <tr style="border-spacing:10px">
            <td>@Html.Label("Name")</td>
            <td>
                @Html.TextBoxFor(model => model.Name,new { @MaxLength = 25 })
                @Html.ValidationMessageFor(Model => Model.Name, "", new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Mobile Number")</td>
            <td>
                @Html.TextBoxFor(model => model.Mobile,new { @MaxLength = 10 })
                @Html.ValidationMessageFor(Model => Model.Mobile, "",  new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Date of Birth")</td>
            <td>
                @Html.TextBoxFor(model => model.Dob,new { @type="date"})
                @Html.ValidationMessageFor(Model => Model.Dob, "",  new { @class = "required"})
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Mail Address")</td>
            <td>
                @Html.TextBoxFor(model => model.Mail)
                @Html.ValidationMessageFor(model => model.Mail, "",  new { @class = "required" })
            </td>

        </tr>
        <tr>
            <td>@Html.Label("Gender")</td>
            <td>
                @Html.RadioButtonFor(model => model.Sex, "male")Male
                @Html.RadioButtonFor(model => model.Sex, "female")Female
                @Html.ValidationMessageFor(Model => Model.Sex, "",  new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("User Address")</td>
            <td>@Html.TextBoxFor(model => model.UserAddress,new { @MaxLength = 50 })
                @Html.ValidationMessageFor(model=>model.UserAddress,"", new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Password")</td>
            <td>
                @Html.TextBoxFor(model => model.Password,new { @MinLength = 8,@MaxLength = 12 })
                @Html.ValidationMessageFor(Model => Model.Password, "",  new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Conform Password")</td>
            <td>
                @Html.TextBoxFor(model => model.ConfirmPassword,new { @MinLength = 8,@MaxLength = 12 })
                @Html.ValidationMessageFor(Model => Model.ConfirmPassword, "", new { @class = "required" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.AntiForgeryToken()
                <input type="submit" value="Register" />
            </td>
        </tr>
    </table>
}

